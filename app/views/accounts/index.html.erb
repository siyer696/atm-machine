

<h1>Accounts</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Account Type</th>
      <th>User Id</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <% if account.user == current_user %>
        <td><%= link_to account.name, account %></td>
        <td><%= account.account_type %></td>
        <td><%= account.user_id %></td>
        <td><%= link_to 'Show Balance', show_balance_account_path(account) %></td>
        <td><%= link_to 'Deposit', deposit_account_path(account) %></td>
        <td><%= link_to 'Withdraw', withdraw_account_path(account) %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, class: "btn btn-success" %>
